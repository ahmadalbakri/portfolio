---
export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.ico" />
		<meta name="description" content="Portfolio of Ahmad Albakri" />
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link
			href="https://fonts.googleapis.com/css2?family=JetBrains+Mono:wght@300;700&display=swap"
			rel="stylesheet"
		/>
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>
<style is:global>
	:root {
		--adhanapp-color: #52616b;
		--thesabun-color: #366834;
	}
	html {
		font-family: "JetBrains Mono", system-ui, sans-serif;
	}
	a {
		color: #ff6600;
		text-decoration: none;
	}
	a:hover {
		text-decoration: underline;
	}
</style>
